<div class="col-md-12">
    <div class="col-md-9 canvas-model-preview">
        <img class="preview-img" src="{{model.previewImg}}" width="100%">
        <div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0"
                 aria-valuemax="100" style="width: 0">
            </div>
        </div>
        <div class="canvas">
            <div class="fullscreen"><img src="/images/fill_screen.png" width="100%"></div>
        </div>
    </div>
    <div class="col-md-3">
        <img src="{{model_user_avatar}}?imageView2/2/w/100" width="40px"><br>
        作者：{{model_user_name}}<br>
        作品名：{{model.name}}<br>
        描述：{{model.descriptions}}<br>
        分类：{{model.typeId}}<br>
        上传时间：{{model.createTime}}
    </div>
</div>

<div class="col-md-6 transform-panel">
    作品名：{{model.name}}<br>
    描述：{{model.descriptions}}<br>
    分类：{{model.typeId}}<br>
</div>

{{#if is_model_option}}
    <div class="col-md-6 transform-panel show">
        <div class="panel panel-primary">
            <div class="panel-heading">勿移动缩放模型进行模型配置</div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-md-2">scale:</label>

                    <div class="col-md-10">
                        <input class="form-control model_option_0" type="number">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">rotation_x:</label>

                    <div class="col-md-10">
                        <input class="form-control model_option_1" type="number">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">rotation_y:</label>

                    <div class="col-md-10">
                        <input class="form-control model_option_2" type="number">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">rotation_z:</label>

                    <div class="col-md-10">
                        <input class="form-control model_option_3" type="number">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">position_x:</label>

                    <div class="col-md-10">
                        <input class="form-control model_option_4" type="number">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">position_y:</label>

                    <div class="col-md-10">
                        <input class="form-control model_option_5" type="number">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2">position_z:</label>

                    <div class="col-md-10">
                        <input class="form-control model_option_6" type="number">
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button class="btn btn-sm btn-success" id="update_model_option">更新配置</button>
            </div>
        </div>
    </div>
{{/if}}

<script>
    var model_id = '{{model._id}}',
            objUrl = '{{model.objUrl}}',
            mtlUrl = '{{model.mtlUrl}}',
            model_option = [{{model.modelOption}}],
            is_model_option='{{is_model_option}}';
</script>