<span id="progress"></span>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">模型名称：</label>

        <div class="col-sm-10">
            <input type="text" id="model_name">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">模型描述：</label>

        <div class="col-sm-10">
            <textarea maxlength="300" id="model_descriptions"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">模型预览图：</label>

        <div class="col-sm-10">
            <img src="" width="200px" id="previewImg" style="display: none">
            <button class="btn btn-sm btn-success" id="btn_add_preview">添加</button>
        </div>
    </div>
<div class="form-group">
    <label class="col-sm-2 control-label">模型类型：</label>

<div class="col-sm-10">
<select id="model_type">
{{#each styleList}}
    <option value="{{styleNum}}">{{styleName}}</option>
{{/each}}
</select>
</div>
</div>
    <div class="form-group">
        <label class="col-sm-2 control-label">obj文件：</label>

        <div class="col-sm-10">
            <button class="btn btn-sm btn-success" id="btn_add_obj">添加</button>
            <span id="obj-text"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">mtl文件：</label>

        <div class="col-sm-10">
            <button class="btn btn-sm btn-success" id="btn_add_mtl">添加</button>
            <span id="mtl-text"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">贴图文件（可多选）：</label>

        <div class="col-sm-10">
            <div class="imgList"></div>
            <button class="btn btn-sm btn-success" id="btn_add_img">添加</button>
        </div>
    </div>
    <div style="text-align: center">
        <button class="btn btn-sm btn-success" id="upload-model">上传</button>
    </div>
</div>