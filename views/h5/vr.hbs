<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}--VR</title>
    <meta name="viewport"
          content="user-scalable=0,width=device-width,initial-scale=1, minimum-scale=1, maximum-scale=1,minimal-ui">
    <style>
        body {
            margin: 0;
            background: #000;
        }

        .orientation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            bottom: 0;
            background: #000;
            color: #fff;
            font-size: 30px;
            text-align: center;
            padding-top: 100px;
            z-index: 999;
        }

        .parameter {
            display: none;
            position: fixed;
            margin-top: 20px;
            width: 100%;
            text-align: center;
            top: 0;
            z-index: 9999;
            color: #fff;
        }

        .model_show {
            width: 100%;
            text-align: center;
        }

        .model_show div {
            float: left;
            width: 50%;
            height: 100%;
            box-sizing: border-box;
        }

        .model_show div canvas {
            zoom: .5;
        }

        .model_show_left {
            border-right: 1px solid #fff;
        }
    </style>
</head>
<body>
<div class="model_show">
    <div class="model_show_left"></div>
    <div class="model_show_right"></div>
</div>
<div class="parameter">
    alpha:<span id="alpha"></span><br>
    beta:<span id="beta"></span><br>
    gamma:<span id="gamma"></span><br>
    相机坐标:<span id=camera></span>
</div>
<div class="orientation">

</div>
<script data-main="/js/module/h5/main" src="/js/common/require.min.js"></script>
<script>
    var objUrl = '{{model.objUrl}}',
            mtlUrl = '{{model.mtlUrl}}',
            model_option = [{{model.modelOption}}];
</script>
</body>
</html>